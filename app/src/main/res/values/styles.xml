<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalTextRoundedButton">
        <item name="android:paddingTop">@dimen/default_padding_top</item>
        <item name="android:paddingBottom">@dimen/default_padding_top</item>
        <item name="android:paddingEnd">@dimen/default_padding_sides</item>
        <item name="android:paddingStart">@dimen/default_padding_sides</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NormalTextRectangleButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ErrorMessage">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
